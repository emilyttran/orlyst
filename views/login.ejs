<% include partials/header %>


<div class="container text-center">
    <div class="row">
        <div style="width: 250px; margin: 25px auto">
            <form action="/login" method="post">
                <div id="logo" style="text-align: center"><img height="100%" width="100%" src="orlyst-logo.png" alt=""></img></div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="OxyID">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block">Log In</button>
                </div>
            </form>
            <a href="/signup">Not a member?</a>
        </div>
    </div>
</div>

